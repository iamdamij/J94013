@page
@model J94013.Pages.MenusModel

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}


<body>
    <div class="menu">
        
        <h1 class="menu_h1">MENU</h1>
        <form method="POST">
        <p>
            <select asp-for="MenuCartegory" asp-items="Model.Cartegory">
                <option value="">All</option>
            </select>
            Name: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
        
        
        <table class="table">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].Cartegory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Menu[0].ImgImageData)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Menu)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cartegory)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageFile)
                                <img src="data:image/jpg;base64 ,@item.ImgImageData" width="120px" height="120px" />
                            </td>
                            <td>
                        <td>
                            <button type="submit" asp-page-handler="Buy" asp-route-itemID="@item.ID">Add to cart</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </form>
    </div>
</body>
