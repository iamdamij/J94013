<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - J94013</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/identificationtesting.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="overlay">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><span class="ofadr">OFAD<b>_R</b></span></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="item">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Menu">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Contacts">Contacts</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>

                                <ul class="dropdown-menu">
                                   <li> <partial name="_LoginPartial" /> </li>
                                </ul>
                            </li>
                        </ul>
                </div>
            </div>
        </nav>
            <section class="welcomepg">
                <h2 class="name">
                    OFAD African Restuarant
                </h2>
                <p class="welcome">
                    Welcome to OFAD African Restuarant, where we love making delicious varieties of Nigerian foods. We also do home delivery services for our customers that can make it down to the restaurant.
                </p>
                <div class="buttonctn">
                    <button class="order_button" href="Login.cshtml">Order now</button>
                </div>
            </section>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - identificationtesting - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <div class="container">
                    <a  asp-area="" asp-page="/Admin/Index">Admin</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>